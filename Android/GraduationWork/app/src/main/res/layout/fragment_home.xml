<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_block"
        android:layout_margin="6sp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="12sp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mainProfile"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">
                <!--            IMAGE-->
                <FrameLayout
                    android:id="@+id/profileImage"
                    android:layout_width="120sp"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:background="@color/grey" />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="24sp"
                    app:layout_constraintStart_toEndOf="@id/profileImage"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <TextView
                        android:id="@+id/profileName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Иванов Иван"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <View
                        android:id="@+id/profileDeadline1"
                        android:layout_width="0sp"
                        android:layout_height="1sp"
                        android:background="@color/grey"
                        android:layout_marginTop="2sp"
                        app:layout_constraintTop_toBottomOf="@id/profileName"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <!--                DEPARTMENT-->
                    <TextView
                        android:id="@+id/departmentTitle"
                        android:layout_width="90sp"
                        android:layout_height="wrap_content"
                        android:text="Отдел: "
                        android:layout_marginTop="4sp"
                        app:layout_constraintTop_toBottomOf="@+id/profileDeadline1"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IT"
                        android:layout_marginTop="4sp"
                        app:layout_constraintStart_toEndOf="@id/departmentTitle"
                        app:layout_constraintTop_toBottomOf="@id/profileDeadline1" />
                    <!--                POSITION-->
                    <TextView
                        android:id="@+id/positionTitle"
                        android:layout_width="90sp"
                        android:layout_height="wrap_content"
                        android:text="Должность: "
                        app:layout_constraintTop_toBottomOf="@id/departmentTitle"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:maxEms="7"
                        android:ellipsize="end"
                        android:text="Ведущий разработчик"
                        app:layout_constraintTop_toBottomOf="@id/departmentTitle"
                        app:layout_constraintStart_toEndOf="@id/positionTitle" />
                    <!--                YEAR EXP IN COMPANY-->
                    <TextView
                        android:id="@+id/yearsTitle"
                        android:layout_width="90sp"
                        android:layout_height="wrap_content"
                        android:text="В компании: "
                        app:layout_constraintTop_toBottomOf="@id/positionTitle"
                        app:layout_constraintStart_toStartOf="parent" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8 лет"
                        app:layout_constraintTop_toBottomOf="@id/positionTitle"
                        app:layout_constraintStart_toEndOf="@id/yearsTitle" />
                    <!--                EMPLOYMENT DATE-->
                    <TextView
                        android:id="@+id/employDateTitle"
                        android:layout_width="90sp"
                        android:layout_height="wrap_content"
                        android:text="Принят: "
                        app:layout_constraintTop_toBottomOf="@id/yearsTitle"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9 сентября 2013 г."
                        app:layout_constraintTop_toBottomOf="@id/yearsTitle"
                        app:layout_constraintStart_toEndOf="@id/employDateTitle" />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:layout_marginTop="4sp"
                        android:text="Подробнее"
                        app:layout_constraintTop_toBottomOf="@id/employDateTitle"
                        app:layout_constraintStart_toStartOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="@color/grey"
                android:layout_marginTop="12sp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:text="Добавить событие"
                android:layout_marginTop="12sp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/toolbar_background_curved">
        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|enterAlways">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/home_page_icon"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:layout_gravity="end"
                android:layout_marginEnd="18sp"
                android:text="настройки"
                />
        </Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>