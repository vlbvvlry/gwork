<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/grey">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
<!--        <ListView-->
<!--            android:id="@+id/wardListView"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_margin="4sp"-->
<!--            tools:listitem="@layout/ward_item"/>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:background="@drawable/event_item_background">
                <TextView
                    android:id="@+id/profileName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ФИО"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:gravity="center"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_margin="4sp"
                    android:background="@color/grey"/>
                <Button
                    android:id="@+id/addButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Дать список задач" />
                <Button
                    android:id="@+id/delButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Удалить список задач"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:background="@drawable/event_item_background">
                    <TextView
                        android:id="@+id/profileName2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ФИО"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:gravity="center"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_margin="4sp"
                        android:background="@color/grey"/>
                    <Button
                        android:id="@+id/addButton2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Дать список задач" />
                    <Button
                        android:id="@+id/delButton2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Удалить список задач"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/toolbar_background_curved">
        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|enterAlways">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Ваши подопечные"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>